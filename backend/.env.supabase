# =====================================
# BACKEND ENVIRONMENT VARIABLES
# =====================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# =====================================
# DATABASE - SUPABASE POSTGRESQL
# =====================================
# Connection string from Supabase (Project Settings > Database > Connection String)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-eu-west-1.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
# Alternative variable name (both work)
SUPABASE_DB_URL=

# Optional: Enable query logging for development
LOG_QUERIES=false

# =====================================
# JWT & AUTHENTICATION
# =====================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-256-bits-minimum-change-this

# =====================================
# OAUTH 2.0 PROVIDERS
# =====================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# Microsoft OAuth (optional)
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=

# Apple Sign-In (optional)
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# =====================================
# URLs
# =====================================
# Backend URL (for OAuth redirects and API)
BACKEND_URL=http://localhost:3001
# Production: BACKEND_URL=https://api.auditsec.com

# Frontend URL (for OAuth callbacks)
FRONTEND_URL=http://localhost:5173
# Production: FRONTEND_URL=https://auditsec.com

# =====================================
# STRIPE PAYMENT
# =====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=eur

# =====================================
# AWS S3 (for file storage)
# =====================================
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=auditsec-products

# =====================================
# EMAIL (SendGrid or SMTP)
# =====================================
# Option 1: SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Option 2: Generic SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@auditsec.com
FROM_NAME=AuditSec

# =====================================
# OPENAI (for AI features)
# =====================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# =====================================
# REDIS (for queue/cache)
# =====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================
# SERVER CONFIG
# =====================================
PORT=3001
NODE_ENV=development
# Production: NODE_ENV=production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# SECURITY
# =====================================
# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=10

# Session secret (for express-session if used)
SESSION_SECRET=your-session-secret-change-this

# =====================================
# CRYPTO PAYMENT (optional)
# =====================================
CRYPTO_ENABLED=false
BITCOIN_ADDRESS=
ETHEREUM_ADDRESS=
LITECOIN_ADDRESS=

# =====================================
# MONITORING (optional)
# =====================================
SENTRY_DSN=
LOG_LEVEL=info
